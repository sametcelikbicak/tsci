{
  "name": "tsci",
  "version": "2023.3.19",
  "description": "TypeScript CLI for creating HTML & CSS & TypeScript project with different bundlers.",
  "exports": "./lib/cli.js",
  "types": "./lib/cli.d.ts",
  "bin": {
    "tsci": "bin/tsci.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsc",
    "build": "tsc",
    "test": "vitest --run --silent",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint -c .eslintrc.json --ext .ts,.js ./",
    "lint:fix": "eslint -c .eslintrc.json --ext .ts,.js ./ --fix",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts' '**/*.json' '*.ts' ",
    "format": "npm run prettier && npm run lint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sametcelikbicak/tsci.git"
  },
  "keywords": [
    "typescript",
    "html",
    "css",
    "bundler",
    "cli",
    "tsci"
  ],
  "author": "Samet ÇELİKBIÇAK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sametcelikbicak/tsci/issues"
  },
  "homepage": "https://github.com/sametcelikbicak/tsci#readme",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^9.0.2",
    "@types/node": "^18.8.3",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitest/coverage-c8": "^0.32.2",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.26.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "chalk": "^5.1.2",
    "commander": "^10.0.0",
    "inquirer": "^9.1.4",
    "shelljs": "^0.8.5"
  }
}
